{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Codex",
			"type": "python",
			"request": "launch",
			"module": "flask",
			"env": {
				"FLASK_APP": "src/main.py",
				"FLASK_DEBUG": "1",
				"FLASK_ENV": "development",
				"FLASK_SECRET_KEY":"dev_dummy_key",
				"SMOKE_TEST_KEY":"dev_smoke_test_key",
				"APP_ENVIRONMENT":"DEV",
				"BUILD_GIT_SHA":"dev_dummy_sha",
				"BUILD_TIMESTAMP":"dev_dummy_timestamp",
			},
			"args": [
				"run",
				"--no-debugger",
				"--no-reload"
			],
			"jinja": true,
			"justMyCode": true
		}
	]
}