{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint",
      "type": "shell",
      "command": "./scripts/lint.sh"
    },
    {
      "label": "Unit Tests",
      "type": "shell",
      "command": "./scripts/run_unit_tests.sh",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Integration Tests",
      "type": "shell",
      "command": "./scripts/run_integration_tests.sh",
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "All Tests",
      "type": "shell",
      "command": "./scripts/run_tests.sh",
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "Profile",
      "type": "shell",
      "command": "./scripts/profile.sh"
    }
  ]
}
